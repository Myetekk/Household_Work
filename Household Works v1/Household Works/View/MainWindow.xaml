<Window x:Class="Household_Works.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Household_Works"
        xmlns:prop="clr-namespace:Household_Works.Properties"
        xmlns:vm="clr-namespace:Household_Works.ViewModel"
        xmlns:viewmodel="clr-namespace:Household_Works.ViewModel"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <!--<Window.DataContext>
        <vm:MainViewModel x:Name="viewmodels"/>
    </Window.DataContext>-->


    <Grid Name="main_window">

        <ContentControl Content="{Binding SelectedViewModel}"/>

        <Label Content="Household works" HorizontalAlignment="Center" Margin="0,70,0,0" VerticalAlignment="Top"/>
        <Button Content="Parent" HorizontalAlignment="Left" Margin="218,320,0,0" VerticalAlignment="Top" Height="30" Width="75"
                Command="{Binding UpdateViewCommand}" CommandParameter="Parent"
                Click="Parent_Click"
        />
        <Button Content="Child" HorizontalAlignment="Left" Margin="523,320,0,0" VerticalAlignment="Top" Height="30" Width="75"
                Command="{Binding UpdateViewCommand}" CommandParameter="Child"        
        />

    </Grid>
</Window>
