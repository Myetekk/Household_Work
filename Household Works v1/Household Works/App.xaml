<Application x:Class="Household_Works.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Household_Works"
             xmlns:views="clr-namespace:Household_Works.View"
             xmlns:viewmodels="clr-namespace:Household_Works.ViewModel"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:ParentViewModel}">
            <views:ParentWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:ChildViewModel}">
            <views:ChildWindow/>
        </DataTemplate>
         
    </Application.Resources>
</Application>
